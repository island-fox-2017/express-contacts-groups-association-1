  <body>
    <center>
    <h1>Addresses</h1>
    <table border="1" style="width:50%">
      <tr>
        <th>Id</th>
        <th>Street</th>
        <th>City</th>
        <th>Zip Code</th>
        <th>Contact Id</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <%var i = 1%>
      <%allAdd.forEach(function(isi){ %>
      <tr>
        <td><%=isi.id%></td>
        <td><%=isi.street%></td>
        <td><%=isi.city%></td>
        <td><%=isi.zip_code%></td>
        <td><%=isi.contact_id%></td>
        <td> <a href="/addresses/edit/<%= isi.id%>">Edit</a> </td>
        <td> <a href="/addresses/delete/<%= isi.id%>">Delete</a> </td>
      </tr>
    <%})%>
    </table>
    <br><br>

    <form action="/addresses" method="post">

  Street :<br>
  <input type="text" name="street" value="">
  <br>

  City :<br>
  <input type="text" name="city" value="">
  <br>

  Zip Code :<br>
  <input type="text" name="zip_code" value="">
  <br>

  Contact Id :<br>
  <input type="text" name="contact_id" value="">
  <br>

  <br>
  <input type="submit" value="Submit">
</form>
<br><br>
<a href="/"><b>Home</b></a>

</center>

  </body>
</html>
