<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My Groups</title>
  </head>

  <body>
    <div class="title">
      <table>
        <tr>
          <th> No </th>
          <th> Group Name</th>
        </tr>
        <%var i=0; group_data.forEach(group => { %>
          <tr>
            <td><%=i+=1%><% group.id %> </td>
            <td><%= group.name_of_group %></td>
            <td><a href="groups/edit/<%= group.id %>">edit</a></td>
            <td><a href="groups/delete/<%= group.id %>">delete</a></td>
          </tr>
        <% }) %>
      </table>
      <br>
      <br>
      <form action="/groups" method="post">
        <input type = "text" name="nama_group" placeholder="nama group"></input>
        <button type="submit">Add Group</button>
      </form>
      <br>
      <br>
      <a href="/">home</a>
    </div>
  </body>
</html>
